{
  "name": "@venue/koa-zod-router",
  "version": "3.0.1",
  "description": "A Koa router with Zod validation and body parsing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/venuelive/koa-zod-router"
  },
  "scripts": {
    "build": "rm -rf dist && tsup src/index.ts --format cjs,esm --dts",
    "build:turbo": "turbo run build",
    "example": "ts-node-dev --project examples/tsconfig.json examples/index.ts",
    "test": "mocha",
    "test:coverage": "nyc --reporter=text mocha",
    "test:ci": "nyc --reporter=lcov mocha",
    "test:turbo": "turbo run test:ci",
    "lint": "eslint \"src/**/*.ts\" --cache && prettier --check \"src/**/*.ts\"",
    "lint:turbo": "turbo run lint",
    "release": "pnpm build:turbo && npm publish",
    "release:beta": "pnpm build:turbo && npm publish --tag beta"
  },
  "maintainers": [
    {
      "name": "Venue Live",
      "url": "https://github.com/venuelive",
      "email": "help@venue.live"
    }
  ],
  "author": {
    "name": "Jake Fenley",
    "url": "https://github.com/jakefenley",
    "email": "jakefdev@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/bodyparser": "^6.0.0",
    "@koa/router": "^12.0.1",
    "@types/formidable": "^2.0.6",
    "@types/koa__router": "^12.0.2",
    "formidable": "^2.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/koa": "^2.13.10",
    "@types/node": "^18.18.6",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "koa": "^2.14.2",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "5.2.2"
  },
  "peerDependencies": {
    "koa": ">=2.14.1 <3.x",
    "zod": ">=3.22.4 <4.x"
  },
  "resolutions": {
    "@types/koa": "^2.15.0"
  },
  "keywords": [
    "nodejs",
    "api",
    "http",
    "middleware",
    "koa",
    "router",
    "json",
    "typescript",
    "schema",
    "server",
    "handler",
    "schema-validation",
    "endpoint",
    "zod",
    "validation"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
